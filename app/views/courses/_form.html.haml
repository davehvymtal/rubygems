-# frozen_string_literal: true
= simple_form_for(@course) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.label :description
    = f.rich_text_area :description
    %small= f.error :description, class: 'text-danger'
    //se agregan las nuevas columnas de la tabla courses y se agregan opciones de lista desplegable
    = f.input :short_description
    = f.input :language, collection: ["English","Polish","Espa√±ol"]
    = f.input :level, collection: ["Beginner","Intermediate","Advanced"]
    = f.input :price
  .form-actions
    = f.button :submit
